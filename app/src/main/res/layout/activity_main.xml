<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvSecond"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000"
        android:text=""
        android:textColor="#ffff"
        android:textSize="40sp"
        android:textAlignment="viewEnd"
        android:maxLines="1"
        android:gravity="bottom"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/tvMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#000"
        android:gravity="bottom"
        android:maxLines="1"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="#ffff"
        android:textSize="50sp"
        tools:ignore="RtlCompat" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="InefficientWeight,NestedWeights">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4"
                tools:ignore="UselessParent">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="AC"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#ffa500"
                    android:layout_weight="1"
                    android:id="@+id/bac"
                    style="?android:attr/buttonBarButtonStyle"
                    tools:ignore="HardcodedText" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="C"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#ffa500"
                    android:layout_weight="1"
                    android:id="@+id/bc"
                    tools:ignore="ButtonStyle,HardcodedText" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="("
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#ffa500"
                    android:layout_weight="1"
                    android:id="@+id/bk1"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=")"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#ffa500"
                    android:layout_weight="1"
                    android:id="@+id/bk2"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="InefficientWeight">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="5">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="sin"
                    android:textAllCaps="false"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#ffa500"
                    android:layout_weight="1"
                    android:id="@+id/bsin"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="cos"
                    android:textAllCaps="false"
                    android:textSize="25sp"
                    android:background="#000000"
                    android:textColor="#ffa500"
                    android:layout_weight="1"
                    android:id="@+id/bcos"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="tan"
                    android:textAllCaps="false"
                    android:textSize="28sp"
                    android:background="#000000"
                    android:textColor="#ffa500"
                    android:layout_weight="1"
                    android:id="@+id/btan"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="log"
                    android:textAllCaps="false"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#ffa500"
                    android:layout_weight="1"
                    android:id="@+id/blog"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="in"
                    android:textAllCaps="false"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#ffa500"
                    android:layout_weight="1"
                    android:id="@+id/bIn"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="InefficientWeight">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="x!"
                    android:textAllCaps="false"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#ffa500"
                    android:layout_weight="1"
                    android:id="@+id/bfact"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="x²"
                    android:textAllCaps="false"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#ffa500"
                    android:layout_weight="1"
                    android:id="@+id/bsqure"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="√"
                    android:textAllCaps="false"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#ffa500"
                    android:layout_weight="1"
                    android:id="@+id/broot"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="÷"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#ffa500"
                    android:layout_weight="1"
                    android:id="@+id/bdiv"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="InefficientWeight">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4"
                tools:ignore="UselessParent">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#ffff"
                    android:layout_weight="1"
                    android:id="@+id/b7"
                    tools:ignore="ButtonStyle" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:id="@+id/b8"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:id="@+id/b9"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="×"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#ffa500"
                    android:layout_weight="1"
                    android:id="@+id/bmul"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="InefficientWeight">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:id="@+id/b4"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:id="@+id/b5"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:id="@+id/b6"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#ffa500"
                    android:layout_weight="1"
                    android:id="@+id/bminus"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="InefficientWeight">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:id="@+id/b1"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:id="@+id/b2"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:id="@+id/b3"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#ffa500"
                    android:layout_weight="1"
                    android:id="@+id/bsum"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="InefficientWeight">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="π"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:id="@+id/bpi"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:id="@+id/b0"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="."
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:id="@+id/bdot"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="="
                    android:textSize="30sp"
                    android:background="#000000"
                    android:textColor="#ffa500"
                    android:layout_weight="1"
                    android:id="@+id/bequel"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>